<div class="container-fluid box-placeholder">
  <!-- TITLES -->
  <div class="col-12">
    <div class="row">
      <div class="col-md-12 ">
        <h1><%= @estate.name %></h1>
      </div>
      <div class="col-md-12">
        <div><%= @estate.address %></div>
      </div>
      <div class="col-md-12">
        <div><%= City.find_by(id: estate.city_id).name %></div>
      </div>

      <div class="col-md-12">
        <% if estate.status %>
              <span class="badge badge-green float-center">
                <%= "Publicado" %>
              </span>
        <% else %>
              <span class="badge badge-warning float-center">
                <%= "No publicado" %>
              </span>
        <% end %>
      </div>
    </div>
  </div>
  <!-- END -->

  <!-- ESTATE DETAILS -->
  <div class="col-12">
    <div class="row">
      <div class="col-md-4 col-sm-12">

      </div>
      <div class="col-md-8 col-sm-12">
        <%= render partial: "estates/show_images", :locals => { images: @estate.images, h_size: '300px'} %>
      </div>
    </div>
  </div>
  <!-- END -->

  <!-- DESCRIPTION SECTION -->
  <div class="col-12">
    <dl class="row">
      <dt class="col-sm-3">Descripcion:</dt>
      <dd class="col-sm-9">Es un excelente hotel.</dd>
    </dl>
  </div>
  <!-- END -->


  <!-- Availability table -->


    <div class="card-body">
    <br/>
    <div class="content-heading">Habitaciones</div>
    <%= render 'room_detail_list', rooms: @rooms %>
  </div>

</div>