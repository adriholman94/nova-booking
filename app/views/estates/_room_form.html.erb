<fieldset style="margin: 0; border: 0; padding: 0;">
  <div class="row">
    <div class="col-md-6">
        <div class="card-body">
          <div class="form-group">
            <label>Tipo de habitacion</label>
            <%= f.text_field :room_type, class: "form-control", required: "required" %>
          </div>
        </div>
      <div class="card-body">
        <div class="form-group">
          <label>Capacidad</label>
          <%= f.text_field :capacity, class: "form-control", required: "required",  placeholder: "¿Cuántos invitados pueden quedarse en esta habitación?"%>
        </div>
      </div>
      <div class="card-body">
        <div class="form-group">
          <label>Cantidad</label>
          <%= f.text_field :quantity, class: "form-control", required: "required", placeholder: "Numero de habitaciones (de este tipo)" %>
        </div>
      </div>
    </div>


    <div class="col-md-6">
        <div class="card-body">
          <div class="form-group">
            <label>Nombre de la habitacion</label>
            <%= f.text_field :description, class: "form-control", required: "required" %>
          </div>
        </div>
      <div class="card-body">
        <div class="form-group">
          <label>Precio</label>
          <%= f.text_field :price, class: "form-control", required: "required" %>
        </div>
      </div>
    </div>
  </div>


</fieldset>