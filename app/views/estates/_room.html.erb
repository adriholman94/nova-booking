<fieldset style="margin: 0; border: 0; padding: 0;" class="card-body">

  <div class="row ocultar">
    <div class="col-md-6">
      <div class="card-body">
        <div class="form-group">
          <label>Tipo de habitacion</label>
          <%= f.select :room_type, Room.room_type.options, class: "component-select", required: "required" %>
        </div>
      </div>
      <div class="card-body">
        <div class="form-group">
          <label>Capacidad *</label>
          <%= f.text_field :capacity, class: "form-control", required: "required",  placeholder: "¿Cuántos invitados pueden quedarse en esta habitación?", type: "number" %>
        </div>
      </div>
      <div class="card-body">
        <div class="form-group">
          <label>Cantidad *</label>
          <%= f.text_field :quantity, class: "form-control", required: "required", placeholder: "Numero de habitaciones (de este tipo)", type: "number" %>
        </div>
      </div>
    </div>


    <div class="col-md-6">
      <br>
      <br>
      <br>
      <div class="card-body">
        <div class="form-group">
          <label>Nombre de la habitacion *</label>
          <%= f.text_field :description, class: "form-control room_name", required: "required" %>
        </div>
      </div>
      <div class="card-body">
        <div class="form-group">
          <label>Precio *</label>
          <%= f.text_field :price, class: "form-control", required: "required", type: "number" %>
        </div>
      </div>
    </div>

  </div>

  <div class="description card-body"></div>

  <%= link_to "Eliminar" do%>
    <div class=" remove_fields btn btn-link text-danger" title="Eliminar">
      <i class="fas fa-trash-alt"></i>
    </div>
  <%end %>
  <button type="button" title="Mazimizar" class="show_fields btn btn-link text-primary"><i class="fas fa-chevron-circle-up"></i></button>
  <button type="button"  title="Minimizar" class="hide_fields btn btn-link text-primary"><i class="fas fa-chevron-circle-down"></i></button>
  <hr style="border: 1px solid #48a7f4">
</fieldset>