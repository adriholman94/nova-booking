<p id="notice"><%= notice %></p>

<h1>Estates</h1>

<div class="table-responsive">
  <table class="table table-bordered table-hover table-striped">
      <thead>
        <tr>
            <th>Name</th>
            <th>Address</th>
            <th>City</th>
            <th>Status</th>
            <th colspan="4"></th>
        </tr>
      </thead>
      <tbody>
        <% @estates.each do |estate| %>
        <tr>
          <td><%= estate.name %></td>
          <td><%= estate.address %></td>
          <td><%= estate.city_id %></td>
          <td>
            <% if estate.status %>
              <%= "Abierto" %>
            <% else %>
              <%= "Cerrado" %>
            <% end %>
          </td>
          <td><%= link_to 'Show', estate %></td>
          <td><%= link_to 'Edit', edit_estate_path(estate) %></td>
          <td><%= link_to 'Destroy', estate, method: :delete, data: { confirm: 'Are you sure?' } %></td>
          <td>
            <% if estate.status %>
              <%= link_to 'Dar de baja', unsuscribe_estate_path(estate), method: :post, data: { confirm: 'Are you sure?' } %>
            <% else %>
              <%= link_to 'Dar de alta', suscribe_estate_path(estate), method: :post, data: { confirm: 'Are you sure?' } %>
            <% end %>
          </td>
        </tr>
        <% end %>
      </tbody>
  </table>
</div>

<br>
<%= link_to 'New Estate', new_estate_path, :class => "mb-1 btn btn-primary" %>
