              <input type="text" class="form-control" placeholder="Search" style="padding-left: 2.375rem;">
            </div>
            
          </div>
        <% end %>
      </div>
    </div>

    <div class="col-md-6 col-sm-12" style="background-color: #5d9cec">
      <div class="row">
        <ul class="col-12">
          <li>
            <em class="fa-2x mr-2 fas fa-check"></em>
            <span>
