    <h1>
      Busca ofertas de hotel
    </h1>
    <h6>
      La forma más fácil de encontrar hotel
    </h6>
  </header>
  <section class="row main-filter-section" style="height: 300px">
    <div class="col-md-6 col-sm-12 d-flex align-items-center main-filter">
      <div class="col-12 filter-block">
        <%= puts @filterrific.inspect %>
        <%= form_for_filterrific @filterrific do |f| %>
          <div class="form-group col-12">
            <div class="row has-search d-flex align-items-center">
