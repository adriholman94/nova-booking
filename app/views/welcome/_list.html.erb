<div class="container">
  <div class="row">
    <div class="col">
      <table class="table table-bordered">
        <% estates.each do |estate| %>
          <tr>
            <td>
              <div class="media align-items-center">
                <a class="mr-4" href="#">
                  <%= image_tag estate.images.first, alt: "rss feed", height: 150, width: 150 %>
                </a>
                <div class="media-body d-flex">
                  <div class="">
                    <h4 class="m-0" style="font-size:25px"><%= estate.name %></h4>
                    <small class="text-muted"><%= estate.city.name %> | Show on map</small>
                    <p><%= estate.address %></p>
                  </div>
                  <div class="ml-auto">
                    <span>5.0</span>
                    <em class="fa-1x mr-2 fas fa-star"></em>
                  </div>
                </div>
              </div>

              <div class="media-body d-flex">
                <div class="btn-group ml-auto" role="group">
                    <%= link_to owner_path(estate.owner_id) do %>
                      <button class="btn btn-sm btn-primary">Contacto</button>
                    <% end %>
                </div>
              </div>
            </td>
          </tr>
        <% end %>
      </table>
      <div class="card card-columns-2 card-body bg-gray-light">
        <div class="row row-flush">
          <div class="col">
            <%= will_paginate estates, renderer: WillPaginate::ActionView::BootstrapLinkRenderer %>
          </div>
          <div class="col">
            <%= page_entries_info estates, :model => 'estate', :class => 'align-middle' %>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>


