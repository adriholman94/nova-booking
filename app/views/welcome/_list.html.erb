<div class="container">
  <div class="row">
    <div class="col ">
      <table class="table table-bordered w-100">
        <thead>
        </thead>
        <tbody>

        <% estates.each do |estate| %>
          <tr>
            <td>
              <div class="media align-items-center">
                <a class="mr-3" href="#">
                  <%= image_tag estate.images.first, alt: "rss feed", height: 100, width: 100 %>
                </a>
                <div class="media-body  d-flex">
                  <div class="">
                    <h4 class="m-0"><%= estate.name %></h4>
                    <small class="text-muted"><%= estate.city.name %> | Show on map</small>
                    <p></p>
                  </div>
                  <div class="ml-auto">
                    <span>5.0</span>
                    <em class="fa-1x mr-2 fas fa-star"></em>
                  </div>
                </div>
              </div>

              <div class="media-body d-flex">
                <div class="ml-auto">
                  <div class="btn btn-info btn-sm">View</div>
                </div>
              </div>
            </td>
          </tr>
        <% end %>

        </tbody>
      </table>
      <div class="card card-columns-2 card-body bg-gray-lighter">
        <div class="row row-flush">
          <div class="col">
            <%= will_paginate estates, renderer: WillPaginate::ActionView::BootstrapLinkRenderer %>
          </div>
          <div class="col">
            <%= page_entries_info estates, :model => 'estate', :class => 'align-middle' %>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>


