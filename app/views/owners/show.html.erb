
<div class="row">
  <div class="col-lg-4">
    <div class="card card-default">
      <div class="card-body text-center">
        <div class="py-4 text-center">
          <% if @owner.image.attached? %>
           <%= image_tag @owner.image, alt: "rss fit", height: "150", width:"150"%>
          <% end %>
        </div>
        <h3 class="m-0 text-bold"><%= @owner.name %></h3>
        <div class="my-3">
          <div class="col-xl-12 col-md-8 col-8">
                     <%= @owner.about %>
          </div>
        </div>
        <div class="text-center">
        </div>
      </div>
    </div>
  </div>
  <div class="col-lg-8">
    <div class="card card-default">
      <div class="card-header d-flex align-items-center">
        <div class="d-flex justify-content-center col">
          <div class="h4 m-0 text-center">Información</div>
        </div>

      </div>
      <div class="card-body">
        <div class="row py-4 justify-content-center">
          <div class="col-12 col-sm-10">
            <form class="form-horizontal">
              <div class="form-group row">
                <label class="text-bold col-xl-2 col-md-3 col-4 col-form-label text-right" >Nombre</label>
                <div class="col-xl-10 col-md-9 col-8">
                  <label class=" col-form-label text-right"><%= @owner.name %></label>
                </div>
              </div>
              <div class="form-group row">
                <label class="text-bold col-xl-2 col-md-3 col-4 col-form-label text-right">Email</label>
                <div class="col-xl-10 col-md-9 col-8">
                  <label class=" col-form-label text-right"><%=user_email(@owner.user_id)%></label>
                </div>
              </div>
              <div class="form-group row">
                <label class="text-bold col-xl-2 col-md-3 col-4 col-form-label text-right" >Teléfono</label>
                <div class="col-xl-10 col-md-9 col-8">
                  <label class=" col-form-label text-right"><%= @owner.phone %></label>
                </div>
              </div>
              <div class="form-group row">
                <label class="text-bold col-xl-2 col-md-3 col-4 col-form-label text-right" >Dirección</label>
                <div class="col-xl-10 col-md-9 col-8">
                  <label class=" col-form-label text-right"><%= @owner.address %></label>
                </div>
              </div>
              <div class="form-group row">
                <div class="col-xl-2 col-md-3 col-4"></div>
                <div class="col-xl-10 col-md-9 col-8">
                </div>
              </div>
            </form>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>