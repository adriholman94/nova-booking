<div class="content-heading">
  <div>Ciudades</div>

  <div class="ml-auto">
    <%= link_to new_city_path do %>
      <button class="btn btn btn-info" title="Nueva ciudad">
        <i class="fas fa-plus text-light fa-1x"></i>
      </button>
    <% end %>
  </div>
</div>

<div id="results" align="center">
  <%= render(
          partial: 'cities/list',
          locals: {cities: cities}
      ) %>
</div>